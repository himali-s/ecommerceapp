<% include partials/header %>
<div id="Edit Profile">
<div class="container">
    <div style="width:30%; margin:20px auto;">
        
     <h1>Order Details</h1>
        <form action="/orderdetails" method="POST">

            <div class="form-group">
                <label>First Name</label>
                <input id="firstname" class="form-control" type="text" name="fname" placeholder="First Name"></input>
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input id="lastname" class="form-control" type="text" name="lname" placeholder="Last Name"></input>
            </div>
            

            <div class="form-group">
                <label>Mobile Number</label>
                <input id="mnumber" class="form-control" type="text" name="mnumber" placeholder="Mobile Number"></input>
            </div>

            <div class="form-group">
                <label>Card Number</label>
                <input id="cid" class="form-control" type="text" name="cid" placeholder="Card Number"></input>
            </div>

            <div class="form-group">
                <label>Address</label>
                <input id="address" class="form-control" type="text" name="address" placeholder="Address"></input>
            </div>
            <input id ="total" type="hidden" name="totalprice" value="<%= totalPrice %>" ></input>
             <div class="form-group">
                   <button  id ="submit" class="btn btn-primary">Confirm Order</button>
            </div>
        </form>
    </div>
</div>
</div>
<script src="/scripts/validateLogin.js"></script>
<% include partials/footer %>